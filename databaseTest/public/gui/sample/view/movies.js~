Ext.define('GeekFlicks.view.Movies', {
    extend: 'Ext.grid.Panel',
    alias: 'widget.movieseditor',

    initComponent: function () {

        // Hardcoded store with static data:
        this.store = {
            fields: ['title', 'year'],
            data: [{
                title: 'The Matrix',
                year: '1999'
            }, {
                title: 'Star Wars: Return of the Jedi',
                year: '1983'
            }]
        };

        this.columns = [{
            header: 'Title',
            dataIndex: 'title',
            flex: 1
        }, {
            header: 'Year',
            dataIndex: 'year',
            flex: 1
        }];

        this.callParent(arguments);
    }
});
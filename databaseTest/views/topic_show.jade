h1= title
div.article
    div.name
       b= 'Writer: ' + article.author
    div.body= article.body
    br
    div.created_at= article.created_at
    - each comment in article.comments
      div.comment
        div.line -----------------------------------------------------
        div.person
           b= comment.name
        div.comment= comment.comment
        br
        div.created_at= comment.created_at
    div
      form( method="post", action="/topic/addComment")
        input( type="hidden", name="_id", value=article._id.toHexString())
        div
          span Name :
          input( type="text", name="name", id="addCommentPerson")
        div
          span Comment :
          textarea( name="comment", rows=5, id="addCommentComment").
        div#editArticleSubmit
          input(type="submit", value="Send")
